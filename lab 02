// bai 1
#include<iostream>
#include<conio.h> 
using namespace std;
struct phone 
{ 
char area[10]; 
char exchange[10]; 
char number[10]; 
}; 
int main() 
		{  
phone ph1={"212","767","8900"};  
phone ph2; 

cout<<"\nenter your area code,exchange and number:"; 
cin>>ph2.area>>ph2.exchange>>ph2.number; 
cout<<"\nmy number is ("<<ph1.area<<")"<<ph1.exchange<<"-"<<ph1.number; 
cout<<"\nyour number is ("<<ph2.area<<")"<<ph2.exchange<<"-"<<ph2.number; 
getch(); 

return 0; 
}

// bai 3
#include<iostream> 
#include<conio.h> 
using namespace std;

int main() 
	{ 
char c,operatr; 
double operand1,operand2; 
 do 
	{ 
cout<<"Nhap so thu nhat, phep tinh , so thu hai  "; \
cin>>operand1>>operatr>>operand2; 
switch(operatr) 
	{ 
case '+':cout<<"Ket qua ="<<operand1+operand2;  
break; 
case '-':cout<<"Dap an="<<operand1-operand2;  
break; 
case '*':cout<<"Cau tra loi ="<<operand1*operand2;  
break; 
case '/':cout<<"Cau tra loi ="<<operand1/operand2;  
break; 
default:cout<<"phep toan khong hop le "; 
	}
 do 
 	{ 
 cout<<"\nDo another(y/n)?:"; 
 cin>>c; 
 if(c!='y'&&c!='n') 
 cout<<"lua chon khong hop le "; 
 	}while(c!='y'&&c!='n'); 
 	}while(c=='y'); 
 return 0;
 
  }
  
  
 // bai 2

